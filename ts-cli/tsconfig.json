{
    "compilerOptions": {
        "outDir": "./dist/", // 导出目录
        "module": "CommonJS",
        "target": "ES5",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "jsx": "react-jsx", // 函数式组件不需要导入 React
        "allowJs": true,
        "lib": [
            "DOM",
            "ESNext"
        ],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}